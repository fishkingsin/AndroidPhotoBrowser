<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/ic_menu_close_clear_cancel"
        android:tint="@android:color/white"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnTrash"
                style="@style/SimpleButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/bin"
                android:tint="@android:color/white"/>

            <ImageButton
                android:id="@+id/btnSend"
                style="@style/SimpleButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/send"
                android:tint="@android:color/white"/>

            <ImageButton
                android:id="@+id/btnDownload"
                style="@style/SimpleButtonStyle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/download_cloud_blue"
                android:tint="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorDescriptionBackground">

        <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
            android:id="@+id/etDescription"
            style="@style/DescriptionText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:hint="@string/add_a_caption"
            android:imeOptions="actionDone"
            android:padding="@dimen/activity_margin"
            android:visibility="gone"
            app:met_baseColor="@android:color/white"
            app:met_clearButton="true"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="160"
            app:met_primaryColor="@color/colorDescriptionHints"
            app:met_singleLineEllipsis="true"
            />

        <TextView
            android:id="@+id/tvDescription"
            android:textColor="@color/colorDescription"
            android:hint="@string/add_a_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/activity_margin"
            android:textColorHint="#F6F6F6"
            android:maxLines="4"
            />
    </FrameLayout>


</merge>